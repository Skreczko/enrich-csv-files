{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./static/bundles",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["./static/js/types", "./node_modules/@types"],
    "types": ["jest", "node"],
  },
  "include": [
    "./static"
  ],
  "exclude": [
    "./static/bundles"
  ]
}
